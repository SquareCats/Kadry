@model Kadry.Web.Models.Dictionaries.PositionDictionaryViewModel

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<h4>Lista Stanowisk</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Get">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sort" class="control-label"></label>
                <input asp-for="Sort" class="form-control" />
                <span asp-validation-for="Sort" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <input asp-for="CreatedOn" type="hidden" />
            <input asp-for="CreatedBy" type="hidden" />
            <input asp-for="ObjectGuid" type="hidden" />
            <input asp-for="ChangedOn" type="hidden" />
            <input asp-for="ChangedBy" type="hidden" />

            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="PositionDictionary" asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}